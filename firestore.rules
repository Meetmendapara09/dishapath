rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Publicly readable collections
    match /careers/{careerId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
    }

    match /colleges/{collegeId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
    }

    match /exams/{examId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
    }
    
    match /scholarships/{scholarshipId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
    }

    match /studyMaterials/{materialId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
    }

    // User-specific data
    match /users/{userId} {
      // Admins can read any user profile
      allow read: if request.auth != null && request.auth.token.isAdmin == true;
      // Users can read and write to their own profile
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Recommendations subcollection
      match /recommendations/{recommendationId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
      
      // Quiz results subcollection
      match /quizResults/{quizResultId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
