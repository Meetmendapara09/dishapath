rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // Users can only read and write to their own profile
      allow read, write: if request.auth.uid == userId;
      
      // Admin can read all user profiles
      allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';

      // Users can manage their own recommendations
      match /recommendations/{recommendationId} {
        allow read, write, delete: if request.auth.uid == userId;
      }
    }

    // Public collections, anyone can read
    match /careers/{docId} {
      allow read: if true;
    }
    match /colleges/{docId} {
      allow read: if true;
    }
    match /exams/{docId} {
      allow read: if true;
    }
    match /scholarships/{docId} {
      allow read: if true;
    }
    match /studyMaterials/{docId} {
      allow read: if true;
    }
  }
}