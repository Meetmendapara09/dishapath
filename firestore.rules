rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow read, update: if isSignedIn() && isOwner(userId);
      // Admins can read any user's profile
      allow get: if isSignedIn() && isAdmin();
      
      // Rules for user subcollections
      match /chatSessions/{sessionId} {
        allow read, write, create: if isSignedIn() && isOwner(userId);
      }
      match /recommendations/{recommendationId} {
        allow read, write, create, delete: if isSignedIn() && isOwner(userId);
      }
       match /quizResults/{quizId} {
        allow read, write, create: if isSignedIn() && isOwner(userId);
      }
      match /bookmarkedColleges/{collegeId} {
        allow read, write, create, delete: if isSignedIn() && isOwner(userId);
      }
    }

    // Admins can list all users
    match /users {
        allow list: if isSignedIn() && isAdmin();
    }

    // Public collections readable by any signed-in user (or allow read for testing)
    match /careers/{careerId} {
      allow read: if true; // Temporarily allow all reads for testing
    }
    match /colleges/{collegeId} {
      allow read: if true; // Temporarily allow all reads for testing
    }
    match /exams/{examId} {
      allow read: if true; // Temporarily allow all reads for testing
    }
    match /scholarships/{scholarshipId} {
        allow read: if true; // Temporarily allow all reads for testing
    }
     match /studyMaterials/{materialId} {
        allow read: if true; // Temporarily allow all reads for testing
    }
  }
}
